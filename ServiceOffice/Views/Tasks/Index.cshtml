@model IEnumerable<ServiceOffice.Models.WorkTask>
@{
    ViewData["Title"] = "المهام";
}
<h2>المهام</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">مهمة جديدة</a>
</p>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>العميل</th>
            <th>الخدمة</th>
            <th>الموظف</th>
            <th>الحالة</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Client?.Name</td>
                <td>@task.Service?.Name</td>
                <td>@task.AssignedEmployee?.Name</td>
                <td>@task.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">تعديل</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
