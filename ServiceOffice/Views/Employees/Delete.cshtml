@model ServiceOffice.Models.Employee
@{
    ViewData["Title"] = "حذف موظف";
}
<h2>حذف موظف</h2>
<h4>هل أنت متأكد من حذف الموظف التالي؟</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">الاسم</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">القسم</dt>
        <dd class="col-sm-10">@Model.Department</dd>
        <dt class="col-sm-2">الهاتف</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">البريد الإلكتروني</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">حذف</button>
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </form>
</div>
