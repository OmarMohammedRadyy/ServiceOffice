@model IEnumerable<ServiceOffice.Models.Employee>
@{
    ViewData["Title"] = "الموظفون";
}
<h2>الموظفون</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">موظف جديد</a>
</p>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>الاسم</th>
            <th>القسم</th>
            <th>الهاتف</th>
            <th>البريد الإلكتروني</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Department</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">تعديل</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
