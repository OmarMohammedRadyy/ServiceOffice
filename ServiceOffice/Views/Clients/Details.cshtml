@model ServiceOffice.Models.Client
@{
    ViewData["Title"] = "تفاصيل عميل";
}
<h2>تفاصيل عميل</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">الاسم</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">الهاتف</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">البريد الإلكتروني</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">العنوان</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">ملاحظات</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">تعديل</a>
    <a asp-action="Index" class="btn btn-secondary">عودة</a>
</div>
